<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<androidx.constraintlayout.widget.Guideline
		android:id="@+id/guidelin90"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		app:layout_constraintGuide_percent=".75" />

	<ImageButton
		android:id="@+id/buttonNewGame"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:layout_marginStart="8dp"
		android:layout_marginTop="8dp"
		android:layout_marginEnd="8dp"
		android:layout_marginBottom="8dp"
		android:background="@drawable/new_game"
		android:contentDescription="@string/new_game"
		android:scaleType="fitEnd"
		android:textColor="@color/white"
		app:layout_constraintBottom_toTopOf="@+id/buttonSettings"
		app:layout_constraintDimensionRatio="h,3:1"
		app:layout_constraintEnd_toStartOf="@+id/guidelin90"
		app:layout_constraintStart_toStartOf="@+id/guideline10"
		app:layout_constraintTop_toBottomOf="@+id/imageView" />

	<ImageView
		android:id="@+id/imageView"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginStart="64dp"
		android:layout_marginTop="64dp"
		android:layout_marginEnd="64dp"
		android:adjustViewBounds="true"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.0"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:srcCompat="@drawable/logo_full" />

	<androidx.constraintlayout.widget.Guideline
		android:id="@+id/guideline10"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		app:layout_constraintGuide_percent="0.25" />

	<Button
		android:id="@+id/buttonSettings"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:layout_marginEnd="8dp"
		android:layout_marginBottom="64dp"
		android:background="@drawable/settings"
		android:contentDescription="@string/settings"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintDimensionRatio="1:1"
		app:layout_constraintEnd_toStartOf="@+id/guidelin90"
		app:layout_constraintHorizontal_bias="0.5"
		app:layout_constraintStart_toEndOf="@+id/buttonAchievements" />

	<Button
		android:id="@+id/buttonAchievements"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:layout_marginStart="8dp"
		android:layout_marginEnd="8dp"
		android:layout_marginBottom="64dp"
		android:background="@drawable/achievements"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintDimensionRatio="1:1"
		app:layout_constraintEnd_toStartOf="@+id/buttonSettings"
		app:layout_constraintHorizontal_bias="0.5"
		app:layout_constraintStart_toEndOf="@+id/buttonLeaderboards" />

	<Button
		android:id="@+id/buttonLeaderboards"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:layout_marginStart="8dp"
		android:layout_marginBottom="64dp"
		android:background="@drawable/leaderboard"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintDimensionRatio="1:1"
		app:layout_constraintEnd_toStartOf="@+id/buttonAchievements"
		app:layout_constraintHorizontal_bias="0.5"
		app:layout_constraintStart_toEndOf="@+id/guideline10"
		app:layout_constraintStart_toStartOf="@+id/guideline10" />
</androidx.constraintlayout.widget.ConstraintLayout>