<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_gravity="center"
	android:layout_margin="32dp">

	<androidx.constraintlayout.widget.ConstraintLayout
		android:layout_width="0dp"
		android:layout_height="0dp"
		app:layout_constraintBottom_toBottomOf="@+id/tutorialFragmentContainer"
		app:layout_constraintEnd_toEndOf="@+id/tutorialFragmentContainer"
		app:layout_constraintStart_toStartOf="@+id/tutorialFragmentContainer"
		app:layout_constraintTop_toTopOf="@+id/tutorialFragmentContainer">

		<ImageView
			android:id="@+id/imageViewBackground"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:layout_margin="4dp"
			android:adjustViewBounds="true"
			android:scaleType="fitXY"
			android:visibility="visible"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			app:srcCompat="@drawable/green_chalkboard"
			tools:ignore="ContentDescription" />

		<View
			android:id="@+id/viewBorder"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:background="@drawable/accent_color_outline"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent" />
	</androidx.constraintlayout.widget.ConstraintLayout>

	<fragment
		android:id="@+id/tutorialFragmentContainer"
		android:name="com.benedetto.chalkjotto.fragments.TutorialFragment"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		app:layout_constrainedHeight="true"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		tools:layout="@layout/fragment_tutorial" />

</androidx.constraintlayout.widget.ConstraintLayout>